<p>
  <strong>Name</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h2>Reviews:</h2>
<% @restaurant.reviews.each do |review| %>
   <p><%= review.rating %>/5 -- <%= review.content %> </p>
<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back', restaurants_path %> |
